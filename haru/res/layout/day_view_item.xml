<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F0F0F0" >

        <com.projects.haru.ui.widget.CustomTextView
            android:id="@+id/day_view_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projects.haru.ui.widget.CustomTextView
            android:id="@+id/day_view_item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projects.haru.ui.widget.CustomTextView
            android:id="@+id/day_view_item_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projects.haru.ui.widget.CustomTextView
            android:id="@+id/day_view_item_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.projects.haru.ui.widget.CustomTextView
            android:id="@+id/day_view_item_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>